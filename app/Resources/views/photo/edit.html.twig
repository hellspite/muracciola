        <div class="modal-header">
            <h1>Modifica foto</h1>
        </div>
    
        <div class="modal-body">
            <img src="{{ asset(['images/gallery/', photo.image]|join) }}" class="admin-thumb" />
        
            <ul class="admin-actions admin-actions-show">
                <li>
                    <a class="btn btn-success" href="{{ path('admin_gallery_index') }}">Torna alla lista</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                        <input class="btn btn-danger" type="submit" value="Elimina">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
