{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="Flexible-container" style="text-align:center">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11892.966219385155!2d12.853425893115237!3d41.82309642612245!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x13257e3245b4643d%3A0x5657be0d1b0a0899!2sRistorante+La+Muracciola+Di+Coccia+Agostino!5e0!3m2!1sit!2sit!4v1425132430574" width="800" height="600" frameborder="0" style="border:0"></iframe>
        </div>
    </div>

    <div class="contatti">
        <address>Via Casale S. Antonio – PALESTRINA (Roma)</address>
        <address>
            Tel. 069538924 – <a href="mailto:lamuracciola@alice.it">lamuracciola@alice.it</a>
        </address>
    </div>

    <div class="form-contatti container">
        <h4>Prenotazioni:</h4>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.name, 'Il tuo nome (richiesto)')}}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'La tua email (richiesto)')}}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.phone, 'Il tuo numero di telefono')}}
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.people, 'Numero di persone (richiesto)')}}
                {{ form_errors(form.people) }}
                {{ form_widget(form.people, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.message, 'Il tuo messaggio')}}
                {{ form_errors(form.message) }}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-default">Invia</button>
        {{ form_end(form) }}
    </div>


{% endblock %}
