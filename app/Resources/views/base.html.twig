<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="keywords" content="ristorante, zagarolo, la muracciola, agostino, carne, pesce">
        <meta name="robots" content="INDEX, FOLLOW">
        <title>{% block title %}La Muracciola{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/general.css') }}" rel="stylesheet" /> 
            {% stylesheets '@bootstrap_css' %}
                <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="header">
            <div class="container">
                        <a href="{{ path('homepage') }}"> 
                            <img class="img-responsive logo" src="{{ asset('images/logogrande.png') }}" alt="La Muracciola" />
                        </a>
            </div>
            <div class="navigation">
                <div class="container in-nav">
                    <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
    
                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-4">
                                        <ul class="nav navbar-nav">
                                           <li><a href="{{ path('homepage') }}">Home</a></li>
                                           {# <li><a href="{{ path('muracciola_news') }}">News</a></li> #}
                                           {# <li><a href="{{ path('muracciola_gallery') }}">Foto</a></li> #}
                                           <li><a href="{{ path('contacts') }}">Contatti</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
            <div class="container">
        {% block body %}{% endblock %}
            </div>
        <footer class="footer">
            <div class="container">&copy; La Muracciola</div>
        </footer>

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-3.1.0.min.js') }}">
            {% javascripts '@bootstrap_js' %}
                 <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
