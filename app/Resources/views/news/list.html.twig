{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        {% for post in posts %}
            <div class="container news-box">
                <div class="news-heading">
                    <p>{{ post.date | date("d/m/Y") }}</p>
                    <h3 class="panel-title">{{ post.title | title }}</h3>
                </div>
                <div class="news-body">
                    {{ post.text|raw }}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

