{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        {% for post in posts %}
            <div class="container news-box">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <p>{{ post.date | date("d/m/Y") }}</p>
                        <h3 class="panel-title">{{ post.title | title }}</h3>
                    </div>
                    <div class="panel-body">
                        {{ post.text }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}

