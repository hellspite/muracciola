{% extends 'admin/admin.html.twig' %}


{% block body %}
    <div class="admin-container">
        <div class="modal-header">
            <h1>Amministrazione News</h1>
        </div>
    
        <div class="modal-body">
            <table>
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Titolo</th>
                        <th>Testo</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{% if post.date %}{{ post.date|date('d-m-Y') }}{% endif %}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.text }}</td>
                        <td>
                            <ul class="admin-actions">
                                <li>
                                    <a class="btn btn-success" href="{{ path('admin_news_show', { 'id': post.id }) }}">Mostra News</a>
                                </li>
                                <li>
                                    <a class="btn btn-warning" href="{{ path('admin_news_edit', { 'id': post.id }) }}">Modifica News</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        
                <a class="btn btn-success" href="{{ path('admin_news_new') }}">Crea nuovo</a>
        </div>
    </div>
{% endblock %}
